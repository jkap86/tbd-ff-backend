# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dbname
DB_SSL=false

# JWT Configuration - REQUIRED
# Generate with: node -e "console.log('JWT_SECRET=' + require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-generated-secret-here-must-be-at-least-32-characters
JWT_EXPIRES_IN=7d

# CORS Configuration - REQUIRED for production
# Comma-separated list of allowed origins (no trailing slashes)
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Your App Name <noreply@yourapp.com>"
FRONTEND_URL=http://localhost:3000

# Mobile Deep Link Configuration
# Set to true to use mobile deep link (yourapp://), false for web URLs
USE_MOBILE_DEEP_LINK=false
